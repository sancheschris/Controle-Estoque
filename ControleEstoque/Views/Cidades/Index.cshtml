@model IEnumerable<ControleEstoque.Models.Entities.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.PaisID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CidadeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CidadeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CidadeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
